# Database Connection
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Cloudflare R2 Storage Configuration
# Required for file uploads and image serving
R2_ACCOUNT_ID="your_account_id"
R2_ACCESS_KEY_ID="your_access_key_id"
R2_SECRET_ACCESS_KEY="your_secret_access_key"
R2_BUCKET_NAME="your_bucket_name"
# Optional: Only needed if you plan to use public URLs directly instead of proxy
R2_PUBLIC_URL="https://your-public-url.com"

# Application Settings
# SEED_DB="true" # Set to true on first run to initialize admin user

# Public App URL (Required for Webhook links)
# Example: https://erp.example.com
NEXT_PUBLIC_APP_URL="https://your-domain.com"
